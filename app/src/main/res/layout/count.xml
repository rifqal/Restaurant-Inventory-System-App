<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/update"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:id="@+id/txtUpdate"
            android:layout_gravity="right"
            ></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logImg"
                android:layout_width="89dp"
                android:layout_height="match_parent"

                app:srcCompat="@drawable/stockcount" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                " />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item: "
                        android:textColor="@color/white_new" />

                    <TextView
                        android:id="@+id/varCountItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ItemName"
                        android:textColor="@color/white_new" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Quantity: "
                        android:textColor="@color/white_new" />

                    <TextView
                        android:id="@+id/edtAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter Current Quantity"
                        android:inputType="number"
                        android:textColor="@color/white_new" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNewAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Quantity: "
                        android:textColor="@color/white_new" />

                    <EditText
                        android:id="@+id/edtNewAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter Current Quantity"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:textColor="@color/white_new" />

                </LinearLayout>

                <TextView
                    android:id="@+id/blankSpace2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                          " />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>